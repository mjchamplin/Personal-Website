<footer class="grid-item-5">
  <div>
    <h2>Information</h2>
    <ul class="footer-list">
    {%- for post in collections.all -%}
      <li class="footer-list-item">
        <a href="{{ post.url }}">{{ post.data.title }}</a>
      </li>
    {%- endfor -%}
    </ul>
  </div>
  <div>
    <h2>Elsewhere</h2>
    <ul class="footer-list">
      <li class="footer-list-item">Instagram</li>
      <li class="footer-list-item">LinkedIn</li>
      <li class="footer-list-item">GitHub</li>
    </ul>
  </div>
</footer>
<div class="grid-wide copyright">
  <small>A website by {{ site.author }} - &copy; {{ site.copyrightYear }} - <a href="/colophon">colophon</a></small>
</div>