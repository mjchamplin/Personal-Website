---
layout: base
---

<div class="grid-wide grid-subgrid grid-tight post">
  <div class="grid-item-4 grid-offset-3">  
    <div class="back">
      {% if '/journal' in page.url %}
        <a href="/journal">
          <ion-icon name="arrow-back-outline"></ion-icon> back to journal
        </a>
      {% elif '/storytelling' in page.url %}
        <a href="/storytelling">
          <ion-icon name="arrow-back-outline"></ion-icon> back to storytelling
        </a>
      {% else %}
      {% endif %}
    </div>
    <h1>{{ title }}</h1>
    <div class="meta">
      <p><time datetime="{{ page.date | shortDate }}">Published {{ page.date | postDate }}</time>{% if original.title %}<span class="original"> &mdash; originally posted <time datetime="{{ original.date | shortDate }}">{{ original.date | postDate }}</time> on <a href="{{ original.url }}">{{ original.title }}</a></span>{% endif %}</p>
    </div>
  </div>
  {{ content | safe }}
</div>