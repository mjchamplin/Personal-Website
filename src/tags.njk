---
layout: base
pagination:
  data: collections
  size: 1
  alias: tag
permalink: /tags/{{ tag | slugify }}/
---
<div class="grid-wide {{ page-type }} grid-subgrid grid-tight">
    <div class="grid-wide">
        <h1>Case studies tagged <span class="case-study-tag {{ tag | slugify }}">{{ tag }}</span></h1>
    </div>
    <ol class="grid-wide grid-subgrid grid-tight tag-list">
        {% set taglist = collections[ tag ] %}
        {% for post in taglist | reverse %}
            <li class="tag-list-item grid-wide">
            <h2>
                <a href="{{ post.url }}">{{ post.data.title }}</a>
            </h2>
            {% if post.data.description %}
                <p class="p-med">
                    {{ post.data.description }}
                </p>
            {% endif %}
            </li>
        {% endfor %}
    </ol>
    {% include '_tag.njk' %}
</div>